<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/rellayoutStyle"
        tools:context=".Screens.MainScreen.CalcScreen.CalcFragment">

        <TextView
            android:id="@+id/calcTV"
            android:layout_width="116dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="124dp"
            android:text="@string/calcTV"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/operatorlist"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oper1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginTop="43dp"
            android:text="@string/oper1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calcTV" />

        <TextView
            android:id="@+id/oper2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="36dp"
            android:text="@string/oper2"
            app:layout_constraintEnd_toStartOf="@+id/eq"
            app:layout_constraintTop_toBottomOf="@+id/calcTV" />

        <TextView
            android:id="@+id/operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="34dp"
            android:text="@string/operator"
            app:layout_constraintEnd_toStartOf="@+id/oper2"
            app:layout_constraintStart_toEndOf="@+id/oper1"
            app:layout_constraintTop_toBottomOf="@+id/calcTV" />

        <TextView
            android:id="@+id/eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="48dp"
            android:text="@string/eq"
            app:layout_constraintEnd_toStartOf="@+id/res"
            app:layout_constraintTop_toBottomOf="@+id/calcTV" />

        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="100dp"
            android:text="@string/res"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calcTV" />

        <TextView
            android:id="@+id/operatorlist"
            android:layout_width="92dp"
            android:layout_height="28dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@string/operatorList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/oper1ET"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:hint="@string/oper1"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/oper1"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="@+id/oper1"
            app:layout_constraintTop_toBottomOf="@+id/oper1" />

        <EditText
            android:id="@+id/operatorET"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="@string/operator"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/operator"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="@+id/operator"
            app:layout_constraintTop_toBottomOf="@+id/operator" />

        <EditText
            android:id="@+id/oper2ET"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:hint="@string/oper2"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/oper2"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/oper2"
            app:layout_constraintTop_toBottomOf="@+id/oper2" />

        <TextView
            android:id="@+id/eqTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="@string/eq"
            app:layout_constraintEnd_toEndOf="@+id/eq"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/eq"
            app:layout_constraintTop_toBottomOf="@+id/eq" />

        <TextView
            android:id="@+id/resultTV"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_marginTop="88dp"
            app:layout_constraintEnd_toEndOf="@+id/res"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/res"
            app:layout_constraintTop_toBottomOf="@+id/res" />

        <Button
            android:id="@+id/calcBtn"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="92dp"
            android:text="@string/calcBtn"
            android:theme="@style/BtnStyleMainAct"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>